<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitites.OrderByPhoneActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/OrderByPhoneActivityToolbar"
        style="?actionBarSize"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:title="@string/OrderByPhone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/MyOrderSingleFirstDeliveryBoyCustomerPhoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/orange_phone_24dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toRightOf="@id/MyOrderSingleFirstDeliveryBoyCustomerPhoneIcon"
            android:padding="@dimen/_5sdp"
            android:text="Mohit Varma (No.1)"
            android:textSize="@dimen/_12sdp"></TextView>

        <TextView
            android:id="@+id/MyOrderSingleItemFirstDeliverBoyCallView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_stroke_bg"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Call"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/MyOrderSingleCustomerPhoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/orange_phone_24dp"></ImageView>

        <TextView
            android:id="@+id/MyOrderSingleCustomerPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/MyOrderSingleCustomerPhoneIcon"
            android:padding="@dimen/_5sdp"
            android:textStyle="bold"
            android:text="Mohit varma (No.2)"
            android:textSize="@dimen/_12sdp"></TextView>

        <TextView
            android:id="@+id/MyOrderSingleItemSecondDeliverBoyCallView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_stroke_bg"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Call"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

</LinearLayout>